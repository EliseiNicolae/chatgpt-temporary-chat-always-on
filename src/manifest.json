{
  "manifest_version": 3,
  "name": "ChatGPT: Temporary chat always ON",
  "version": "1.3.1",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["onboarding.js", "chatgpt.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["onboarding.js", "claude.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toggle.html",
        "onboarding.html",
        "icons/toggle_onboarding.png",
        "icons/new_chat_onboarding.png",
        "icons/ko-fi.png",
        "icons/revolut.png"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
